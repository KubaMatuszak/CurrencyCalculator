<Window x:Class="CurrencyCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontSize="20">Wybierz walute z której chcesz przeliczyć</Label>
            <ListBox Height="40" Name="FromList"></ListBox>
            <Label HorizontalAlignment="Center" FontSize="20">Wybierz walute na którą chcesz przeliczyć</Label>
            <ListView Height="40" Name="ToList"></ListView>
            <Label HorizontalAlignment="Center" FontSize="20">Wpisz kwotę</Label>
            <TextBox Name="Amount" Height="40" Width="100"></TextBox>
            <Button Height="50" Width="70" Content="Przelicz" Click="Button_Click"></Button>
            
        </StackPanel>

    </Grid>
</Window>
